extends ../layout/index

block contenido
    div.py-0
        h1.text-4xl.my-10.font-extrabold.text-center.text-blue BienesRaices.io
        h2.text-center.text-greendark.text-2xl.font-extrabold= pagina

        if errores
                    div(class="max-w-md mx-auto my-10")
                    each error in errores
                        p(class="p-4 bg-red-100 border-l-4 border-red-500 text-red-700 border-opacity-50 uppercase mb-2 text-xs text-center font-bold")= error.msg

    div.mt-8.mx-auto.max-w-md
        div.bg-white.py-4.px-4.shadow
            form(method="POST" noValidate).space-y-5  
                input(type="hidden" name="_csrf" value= csrfToken)
                div   
                    label.block.text-sm.uppercase.text-light.mb-3.font-bold(for="email") Nueva contraseña
                    input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nueva Contraseña" type="password" name="password")

                

                input(class="w-full bg-greendark hover:bg-blue text-white font-bold py-3 cursor-pointer" type="submit" value="Guardar Contraseña")